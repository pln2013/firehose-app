<%= simple_form_for @pic do |f| %>

		<%= f.input :lesson, label: 'Which lesson?' %>
	</br>
		<%= f.input :image, label: 'Upload your image:' %>
	</br>


		<%= f.input :emotion, label: 'How do you feel?', placeholder:'Stoked, Jazzed, Super' %>
	</br>
		<%= f.input :learned, label: 'What did you learn?', placeholder: 'HTML, CSS, GitHub, Ruby' %>

		<%= submit_tag 'Save', :class => 'btn-success btn-large' %>

	<% end %>

</div>